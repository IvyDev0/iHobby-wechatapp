/**index.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  background: #F0F4F3;
}
.userinfo {
 
  display: flex;
  flex-direction: column;
  padding: 50rpx 0;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #333;
  font-size: 32rpx;
}
.weui_cell{
    position: relative;
    display: flex;
    padding: 15px;

    border-bottom: 1px solid #dadada;
}
.weui_cell_hd{
  display: inline-block;
  width: 20px;
  margin-right: 5px;
}
.weui_cell_hd image{
  width: 100%;
  height: 20px;
  vertical-align: -2px;
}
.weui_cell_bd{
  display: inline-block;
}
.weui_cell_bd_p{
  font-size: 14px;
  color: #939393;
}
.badge{
  position: absolute;
  top: 18px;
  right: 40px;
  width: 15px;
  height: 15px;
  line-height: 15px;
  background: #ff0000;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  font-size: 8px;
}
.with_arrow{
  position: absolute;
  top: 18px;
  right: 15px;
  width: 15px;
  height: 15px;
  background-image: url(../../images/icon-arrowdown.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
}


/**------对发布的帖子的feed的样式------**/
.container .feed-item{
  width: 690rpx;
  padding: 30rpx 30rpx 20rpx;
  margin: 7rpx 0 6rpx 0;
  background: #ffffff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-shadow: 0 2px 5px #eeeeee;
  display: inline-block;
}
/**---头部---**/
.container .feed-item .feed-head{
  width: 690rpx;
  left: 10rpx;
  height: 70rpx;
}
.container .feed-item .feed-head .feed-head-avatar{
  width: 70rpx;
  height: 70rpx;
  margin: 0rpx;
  border-radius: 50%;
}
.container .feed-item .feed-head .feed-head-name{
  display: inline-block;
  height: 40rpx;
  padding-left: 2px;
  vertical-align:40rpx;
  margin: 0 0 0 10rpx;
  color: #000;
  font-size: 26rpx;
}
.container .feed-item .feed-head .feed-head-time{
  height: 40rpx;
  vertical-align:text-bottom;
  margin-left:-52rpx;
  color: #a0acac;
  font-size: 22rpx;
}
/**---内容---**/
.container .feed-item .feed-content{
  padding: 10rpx 10 10 10;
}
.container .feed-item .feed-content .feed-content-text{
  display: inline-block;
  padding-top: 25rpx;
  padding-left: 8rpx;
  font-size: 28rpx;
  font-weight: 600px;
  line-height: 40rpx;
}
.container .feed-item .feed-content .feed-content-post image{
  max-height: 250rpx;
  margin: 10rpx 5rpx 5rpx -200rpx;
}
/**---底部---**/
.container .feed-item .feed-actions {
  width: 690rpx;
  padding: 10rpx 0  0;
  color: #a0acac;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.container .feed-item .feed-actions view{
  display: inline-block;
  vertical-align: text-bottom;
  padding: 0 10rpx 0 0;
  font-size: 24rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}

